pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                dir('Task1_CICD_Jenkins_Docker') {
                    git branch: 'main', url: 'https://github.com/Harsha03D/OneData-Assessment.git'
                }
            }
        }
        stage('Build') {
            steps {
                dir('Task1_CICD_Jenkins_Docker') {
                    sh 'npm install'
                }
            }
        }
        stage('Test') {
            steps {
                dir('Task1_CICD_Jenkins_Docker') {
                    sh 'npm test || echo "No tests found"'
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                dir('Task1_CICD_Jenkins_Docker') {
                    sh 'docker build -t jenkins-docker-app .'
                }
            }
        }
        stage('Run Docker Container') {
            steps {
                sh 'docker run -d -p 3000:3000 jenkins-docker-app'
            }
        }
    }
}